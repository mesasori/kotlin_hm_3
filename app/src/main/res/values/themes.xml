<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/label.primary</item>
        <item name="colorPrimaryVariant">@color/label.secondary</item>
        <item name="colorOnPrimary">@color/label.primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/label.secondary</item>
        <item name="colorSecondaryVariant">@color/label.secondary</item>
        <item name="colorOnSecondary">@color/label.secondary</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/back.primary</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>



    <style  name="Theme.TodoApp" parent="Base.Theme.TodoApp" />

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/back.elevated</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@color/support.overlay</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:windowBackground">@color/back.secondary</item> <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/label.tertiary</item> <item name="android:textColorPrimary">@color/label.primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
    </style>
    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog"> <item name="android:textColor">@color/blue</item>
    </style>

    
</resources>